<static>	
    <board>
        <width>1500</width>
        <height>1500</height>
        <trianglestyleThisPlayer>fill:blue;stroke:white;stroke-width:1</trianglestyleThisPlayer>
    </board>
    <seed>
        <style>fill:black;</style>
    </seed>
    <house>        
        <nrOfHouses>6</nrOfHouses>
        <width>100</width>
        <height>100</height>
        <roundX>10</roundX>
        <roundY>10</roundY>
        <styleThisPlayer>fill:white;stroke:blue;stroke-width:2;</styleThisPlayer>
        <textstyleThisPlayer>fill:blue;font-family:Agency FB;</textstyleThisPlayer>
        <styleOtherPlayer>fill:white;stroke:red;stroke-width:2;</styleOtherPlayer>
        <textstyleOtherPlayer>fill:red;font-family:Agency FB;</textstyleOtherPlayer>
    </house>
    <store>
        <radius>100</radius>        
        <styleThisPlayer>fill:white;stroke:blue;stroke-width:2;</styleThisPlayer>
        <textstyleThisPlayer>fill:blue;font-weight:bold;font-family:Agency FB;</textstyleThisPlayer>
        <styleOtherPlayer>fill:white;stroke:red;stroke-width:2;</styleOtherPlayer>
        <textstyleOtherPlayer>fill:red;font-weight:bold;font-family:Agency FB;</textstyleOtherPlayer>        
    </store>
    <layout>
        <posStartX>300</posStartX>
        <posStartY>300</posStartY>
        <distanceHorizontalHouse>15</distanceHorizontalHouse>
        <distanceVertitalHouse>50</distanceVertitalHouse>
        <distanceHouseStore>50</distanceHouseStore>
        <distanceYextraSeeds>8</distanceYextraSeeds>
        <distanceBetweenExtraSeeds>5</distanceBetweenExtraSeeds>
        <distanceVerticalHouseFrame>30</distanceVerticalHouseFrame>
        <distanceHorizontalStoreFrame>30</distanceHorizontalStoreFrame>
        <backgroundFrame>
            <roundX>120</roundX>
            <roundY>120</roundY>
            <style>fill:#CEECF5;stroke:#BCA9F5;stroke-width:2;</style>
        </backgroundFrame>        
        <lengthUnit>px</lengthUnit>
    </layout>
    <menu>
        <!-- clickable -->
        <tryAgainButton>
            <desc>Try again</desc>
            <link>tryagain</link>
            <style>fill:green;stroke:green;stroke-width:2;</style>
            <textstyle>fill:white;font-weight:bold;font-family:Agency FB;</textstyle>
        </tryAgainButton>
        <startOverButton>
            <desc>Start Over</desc>
            <link>db/create</link>
            <style>fill:orange;stroke:orange;stroke-width:2;</style>
            <textstyle>fill:white;font-weight:bold;font-family:Agency FB;</textstyle>
        </startOverButton>
        <highscoreButton>
            <desc>Highest Score:</desc>
            <link></link>
            <style>fill:yellow;stroke:orange;stroke-width:2;</style>
            <textstyle>fill:black;font-weight:bold;font-family:Agency FB;</textstyle>
        </highscoreButton>
